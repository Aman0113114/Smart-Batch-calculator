<body>
  <header>‚öóÔ∏è Smart Batch Calculator</header>
  <main>
    <h2>Standard Batch Information</h2>
    <table id="batchTable">
      <thead>
        <tr>
          <th>Ingredient</th>
          <th>Quantity (kg)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><input type="text" value="Ingredient 1"></td>
          <td><input type="number" step="0.01" value="10"></td>
        </tr>
      </tbody>
    </table>
    <button class="add-btn" onclick="addIngredient()">+ Add Ingredient</button>

    <div class="input-group">
      <label for="yield">Yield %:</label>
      <input type="number" id="yield" value="95">
    </div>

    <div class="input-group">
      <label for="loss">Global Loss %:</label>
      <input type="number" id="loss" value="2">
    </div>

    <div class="input-group">
      <label for="packSize">Select Pack Size (kg):</label>
      <select id="packSize">
        <option value="0.25">0.25</option>
        <option value="0.5">0.5</option>
        <option value="1">1</option>
      </select>
      <button onclick="addPackSize()">+ Add Pack Size</button>
    </div>

    <div class="input-group">
      <label for="numPacks">Required Finished Products:</label>
      <input type="number" id="numPacks" value="100">
    </div>

    <button onclick="generateBatch()">üöÄ Generate Batch</button>

    <div class="results" id="results"></div>
  </main>

  <script>
    function addIngredient() {
      const table = document.getElementById("batchTable").getElementsByTagName("tbody")[0];
      const row = table.insertRow();
      const cell1 = row.insertCell(0);
      const cell2 = row.insertCell(1);
      cell1.innerHTML = '<input type="text" placeholder="Ingredient">';
      cell2.innerHTML = '<input type="number" step="0.01" value="0">';
    }

    function addPackSize() {
      const size = prompt("Enter new pack size in kg:");
      if(size && !isNaN(size)) {
        const select = document.getElementById("packSize");
        const option = document.createElement("option");
        option.value = size;
        option.text = size;
        select.add(option);
      }
    }

    function generateBatch() {
      const table = document.getElementById("batchTable");
      const rows = table.getElementsByTagName("tbody")[0].rows;
      const yieldVal = parseFloat(document.getElementById("yield").value) / 100;
      const lossVal = parseFloat(document.getElementById("loss").value) / 100;
      const packSize = parseFloat(document.getElementById("packSize").value);
      const numPacks = parseInt(document.getElementById("numPacks").value);

      let stdBatchTotal = 0;
      let ingredients = [];

      for(let i=0; i<rows.length; i++) {
        const name = rows[i].cells[0].children[0].value;
        const qty = parseFloat(rows[i].cells[1].children[0].value);
        stdBatchTotal += qty;
        ingredients.push({name, qty});
      }

      const requiredFinal = packSize * numPacks;
      const effectiveFinal = requiredFinal / (yieldVal * (1 - lossVal));
      const scaleFactor = effectiveFinal / stdBatchTotal;

      let output = `<h3>üìä Generated Batch</h3>`;
      output += `<p><b>Total Required Final Output:</b> ${requiredFinal.toFixed(2)} kg</p>`;
      output += `<p><b>Effective Batch Size (with Yield & Loss):</b> ${effectiveFinal.toFixed(2)} kg</p>`;
      output += `<table><thead><tr><th>Ingredient</th><th>New Quantity (kg)</th></tr></thead><tbody>`;

      ingredients.forEach(ing => {
        output += `<tr><td>${ing.name}</td><td>${(ing.qty * scaleFactor).toFixed(2)}</td></tr>`;
      });

      output += `</tbody></table>`;
      document.getElementById("results").innerHTML = output;
    }
  </script>
</body>
